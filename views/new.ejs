<%- include('partials/header') %>
<div class="container">
    <h1 class="text-center">Make An Order Of Your Desired Design</h1>

    <div class="row">
        <div style="width: 50%; margin: 20px auto; ">

            <form action="/designs" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="name" name="newDesign[name]">
                </div>

                <div class="form-group">
                    <input class="form-control" type="text" placeholder="image url" name="newDesign[image]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="description" name="newDesign[description]">
                </div>

                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/designs">Go Back</a>

        </div>

    </div>

</div>
<%- include('partials/footer') %>