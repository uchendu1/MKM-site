<%- include('../partials/header') %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">
                Mary Knitting Mill </p>

            <div class="list-group">
                <li class="list-group-item active"> Info 1</li>
                <li class="list-group-item"> Info 2</li>
                <li class="list-group-item"> Info 3</li>
            </div>
        </div>

        <div class="col-md-9 my-3">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= foundDesign.image%>" alt="#">
                <div class="caption-full">
                    <h4 class="pull-right">#800 per cap</h4>

                    <h5><a><%= foundDesign.name %></a></h5>
                    <h6><%= foundDesign.description  %></h6>


                </div>
            </div>

            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/designs/<%= foundDesign._id %>/comments/new"> Add New Comment </a>

                </div>

                <% foundDesign.comments.forEach((comment) => { %>
                    <div class="row">
                        <div class="col-md-12">
                            <%= comment.author %>
                            <span class="pull-right">10 days ago</span>
                            <p>
                                <%= comment.text %>
                            </p> 
                            <% }) %>

                        </div>
                    </div>
                
            </div>
        </div>
    </div>

</div>


<form action="/designs/<%= foundDesign._id %>?_method=DELETE" method="POST">
    <button class="btn btn-lg btn-danger">delete</button>
</form>
</div>
<%- include('../partials/footer') %>