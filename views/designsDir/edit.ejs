<%- include('../partials/header') %>
<div class="container">
    <h1 class="text-center">Edit Comments</h1>

    <div class="row">
        <div style="width: 50%; margin: 20px auto; ">

            <form action="/designs/<%= foundComment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                        <input class="form-control" type="text" name="newDesign[name]" value="<%= foundComment.name %>">
                    </div>

                    <div class="form-group">
                        <input class="form-control" type="text" name="newDesign[image]"
                            value="<%= foundComment.image %>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="newDesign[description]"
                            value="<%= foundComment.description %>">
                    </div>

                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Update</button>
                    </div>
            </form>
            <a href="/designs">Go Back</a>

        </div>

    </div>

</div>
<%- include('../partials/footer') %>