<%- include('../partials/header') %>
<div class="container">
    <h1 class="text-center">Add New Comment to <%= foundComment.name %></h1>

    <div class="row">
        <div style="width: 50%; margin: 20px auto; ">

            <form action="/designs/<%= foundComment._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="text" name="newComment[name]">
                </div>

                <div class="form-group">
                    <input class="form-control" type="text" placeholder="author" name="newComment[author]">
                </div>
               

                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/designs">Go Back</a>

        </div>

    </div>

</div>
<%- include('../partials/footer') %>